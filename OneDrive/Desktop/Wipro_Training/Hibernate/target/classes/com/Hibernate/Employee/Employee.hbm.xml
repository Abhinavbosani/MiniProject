<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	
	<class name = "com.hibernate.employee.Employee" table = "EMPLOYEE_DATAs">
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "designation" column = "designation" type = "string" length="10"/>
      <property name = "Name" column = "name" type = "string" length="12"/>
      <property name = "salary" column = "salary" type = "int" length="10"/>
	</class>
</hibernate-mapping>
